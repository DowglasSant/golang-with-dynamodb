{
  "info": {
    "name": "Go DynamoDB CRUD",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080"
    },
    {
      "key": "user_id",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Criar Usuario",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "const res = pm.response.json();",
              "if (res.id) {",
              "    pm.collectionVariables.set('user_id', res.id);",
              "}"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Joao Silva\",\n  \"email\": \"joao@email.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        }
      }
    },
    {
      "name": "Listar Todos os Usuarios",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/users",
          "host": ["{{base_url}}"],
          "path": ["users"]
        }
      }
    },
    {
      "name": "Buscar Usuario por ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/users/{{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["users", "{{user_id}}"]
        }
      }
    },
    {
      "name": "Atualizar Usuario",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Joao Silva Updated\",\n  \"email\": \"joao.updated@email.com\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/users/{{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["users", "{{user_id}}"]
        }
      }
    },
    {
      "name": "Deletar Usuario",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{base_url}}/users/{{user_id}}",
          "host": ["{{base_url}}"],
          "path": ["users", "{{user_id}}"]
        }
      }
    }
  ]
}
